{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "LogzioLogsHost": {
            "defaultValue": "listener.logz.io",
            "type": "String"
        },
        "LogzioLogsToken": {
            "type": "String"
        },
        "Buffersize": {
            "defaultValue": 100,
            "type": "int"
        },
        "Timeout": {
            "defaultValue": 180000,
            "type": "int"
        },
        "ParseEmptyFileds": {
            "defaultValue": "false",
            "type": "string"
        }
    },
    "variables": {
        "sites_logzioLogsFunctionApp_name": {
            "defaultValue": "[concat('logzioLFunctionApp', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "storageAccountsLogzioFailSafe": {
            "defaultValue": "[concat('logsbackup', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "namespaces_LogzioLogsNS_name": {
            "defaultValue": "[concat('LogzioLNS', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "serverfarms_LogzioLogsSP_name": {
            "defaultValue": "[concat('logzioLAppServicePlan', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "storageAccounts_LogzioLogsAppStorage_name": {
            "defaultValue": "[concat('logzllog', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "EventhubLogsName": {
            "defaultValue": "logzioeventhub",
            "type": "String"
        },
        "AuthorizationRules_LogzioLogsSharedAccessKey_name": {
            "defaultValue": "LogzioLSharedAccessKey",
            "type": "String"
        },
        "ConsumergroupsLogsName": {
            "defaultValue": "LogzioLConsumerGroup",
            "type": "String"
        },
        "AppInsightsName": {
            "defaultValue": "[concat('logzioInsight', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "repoURL": {
            "defaultValue": "https://github.com/logzio/logzio-azure-serverless.git",
            "type": "String"
        },
        "branch": {
            "defaultValue": "master",
            "type": "String"
        }
    },
    "resources": [{
            "type": "Microsoft.EventHub/namespaces",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "name": "[variables('namespaces_LogzioLogsNS_name')]",
            "apiVersion": "2018-01-01-preview",
            "location": "[resourceGroup().location]",
            "tags": {},
            "scale": null,
            "properties": {
                "isAutoInflateEnabled": true,
                "maximumThroughputUnits": 20,
                "provisioningState": "Succeeded"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "name": "[variables('storageAccountsLogzioFailSafe')]",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "name": "[variables('storageAccounts_LogzioLogsAppStorage_name')]",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "serverfarm",
            "name": "[variables('serverfarms_LogzioLogsSP_name')]",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "name": "[variables('serverfarms_LogzioLogsSP_name')]",
                "workerTierName": null,
                "adminSiteName": null,
                "hostingEnvironmentProfile": null,
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('sites_logzioLogsFunctionApp_name')]",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('serverfarms_LogzioLogsSP_name'))]",
                "reserved": false,
                "httpsOnly": true,
                "siteConfig": {
                    "appSettings": [{
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "FUNCTION_APP_EDIT_MODE",
                            "value": "readwrite"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_PROCESS_COUNT",
                            "value": "4"
                        }, 
                        {
                            "name": "Project",
                            "value": "dist/logs/"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccounts_LogzioLogsAppStorage_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_LogzioLogsAppStorage_name')),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccounts_LogzioLogsAppStorage_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_LogzioLogsAppStorage_name')),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "AzureEventHubLogsConnectionString",
                            "value": "[listkeys(resourceId('Microsoft.EventHub/namespaces/authorizationRules', variables('namespaces_LogzioLogsNS_name'), variables('AuthorizationRules_LogzioLogsSharedAccessKey_name')), '2017-04-01').primaryConnectionString]"
                        },
                        {
                            "name": "LogsStorageConnectionString",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountsLogzioFailSafe'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountsLogzioFailSafe')),'2019-06-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
                        },
                        {
                            "name": "LogzioLogsToken",
                            "value": "[parameters('LogzioLogsToken')]"
                        },
                        {
                            "name": "LogzioLogsHost",
                            "value": "[parameters('LogzioLogsHost')]"
                        },
                        {
                            "name": "Buffersize",
                            "value": "[parameters('Buffersize')]"
                        },
                        {
                            "name": "Timeout",
                            "value": "[parameters('Timeout')]"
                        },
                        {
                            "name": "ParseEmptyFileds",
                            "value": "[parameters('ParseEmptyFileds')]"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', variables('AppInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~10"
                        }
                    ]
                }
            },
            "resources": [{
                "apiVersion": "2020-06-01",
                "name": "web",
                "type": "sourcecontrols",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites/', variables('sites_logzioLogsFunctionApp_name'))]"
                ],
                "properties": {
                    "RepoUrl": "[variables('repoURL')]",
                    "branch": "[variables('branch')]",
                    "IsManualIntegration": true
                }
            }],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('serverfarms_LogzioLogsSP_name'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_LogzioLogsAppStorage_name'))]",
                "[concat('Microsoft.EventHub/namespaces/', variables('namespaces_LogzioLogsNS_name'))]",
                "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
            "name": "[concat(variables('namespaces_LogzioLogsNS_name'), '/', variables('AuthorizationRules_LogzioLogsSharedAccessKey_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespaces_LogzioLogsNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "name": "[concat(variables('namespaces_LogzioLogsNS_name'), '/', variables('EventhubLogsName'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "messageRetentionInDays": 7,
                "partitionCount": 4,
                "status": "Active",
                "partitionIds": [
                    "0",
                    "1",
                    "2",
                    "3"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespaces_LogzioLogsNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "name": "[concat(variables('namespaces_LogzioLogsNS_name'), '/', variables('EventhubLogsName'), '/', variables('ConsumergroupsLogsName'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespaces_LogzioLogsNS_name'))]",
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespaces_LogzioLogsNS_name'), variables('EventhubLogsName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2019-04-01",
            "name": "[concat(variables('storageAccountsLogzioFailSafe'), '/default/logziologsbackupcontainer')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountsLogzioFailSafe'))]"
            ],
            "properties": {
                "publicAccess": "None"
            }
        },
        {
            "name": "[variables('AppInsightsName')]",
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02-preview",
            "location": "[resourceGroup().location]",
            "kind": "web",
            "properties": {
              "Application_Type": "web",
             "applicationId": "[variables('AppInsightsName')]"
            }
        }
    ]
}
